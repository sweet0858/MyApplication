<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.maliwan.myapplication.MainActivity">
<LinearLayout

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        android:layout_width="248dp"
        android:layout_height="121dp"
        android:id="@+id/imageView" />

    <TextView
        android:textColor="@color/colortext1"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:text="@string/name_sriwattan"
        android:textSize="@dimen/h1"
        android:layout_width="wrap_content"
        android:layout_height="108dp" />


    <LinearLayout
        android:layout_marginTop="@dimen/magin2"
        android:layout_marginRight="@dimen/magin"
        android:layout_marginLeft="@dimen/magin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView

            android:src="@mipmap/ic_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:hint="@string/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/magin"
        android:layout_marginRight="@dimen/magin"

        android:orientation="horizontal">


        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_pasword" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password" />
    </LinearLayout>

</LinearLayout>

</RelativeLayout>
